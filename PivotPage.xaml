            </phone:PivotItem>

            <phone:PivotItem Header="favorites">
                <phone:LongListSelector Margin="20" ItemsSource="{Binding Items}">
                    <phone:LongListSelector.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="12,2,0,4" Height="105" Width="432">
                                <!--Replace rectangle with image-->
                                <StackPanel Width="311" Margin="8,-7,0,0">
                                    <TextBlock Text="{Binding LineOne}" TextWrapping="Wrap" Margin="10,0" Style="{StaticResource PhoneTextExtraLargeStyle}" FontSize="{StaticResource PhoneFontSizeLarge}" />
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="Assets\bike_green.png"  Stretch="None" Grid.Column="0" Grid.Row="1"/>
                                        <TextBlock Text="1" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Foreground="Green" Padding="10"/>
                                        <Image Source="Assets\rack_red.png"  Stretch="None" Grid.Column="2" Grid.Row="1"/>
                                        <TextBlock Text="1" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Foreground="Red" Padding="10"/>
                                    </StackPanel>
                                </StackPanel>
                                <Border Width="45" Height="45" BorderBrush="#FFFFC700" Background="#FFFFC700"/>
                            </StackPanel>
                        </DataTemplate>
                    </phone:LongListSelector.ItemTemplate>
